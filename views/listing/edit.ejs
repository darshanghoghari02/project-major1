<% layout("./layouts/boilerplate.ejs") -%>

    <body>
        <div class="row col-md-8 offset-2">


            <h1>List Edited</h1>

            <form method="post" action="/listing/<%=list._id%>" class="needs-validation" novalidate>
                <div class="row mb-3">

                    <label for="title" class="form-label">Title</label>
                    <input type="text" id="title" class="form-control" name="listing[title]" value="<%=list.title%>"
                        required>
                </div>
                <div class="row mb-3">

                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" id="description" class="form-control" rows="5" cols="50"
                        required><%= list.description %></textarea>
                </div>
                <div class="row mb-3">

                    <label for="image" class="form-label">Image</label>
                    <input type="text" id="image" name="listing[image]" class="form-control" value="<%=list.image%>"
                        required>
                </div>
                <div class="row">
                    <div class="col-md-6">

                        <label for="price" class="form-label">Price</label>
                        <input type="number" id="price" name="listing[price]" class="form-control"
                            value="<%=list.price%>" min="0" required>
                    </div>
                    <div class="col-md-6">

                        <label for="country" class="form-label">Country</label>
                        <input type="text" id="country" name="listing[country]" class="form-control"
                            value="<%=list.country%>" required>
                    </div>
                </div>

                <div class="row mb-3">

                    <label for="location" class="form-label">Location</label>
                    <input type="text" id="location" name="listing[location]" class="form-control"
                        value="<%=list.location%>" required>
                </div>


                <button class="btn btn-primary mt-5"> Edit</button>
            </form>

           
        </div>
    </body>