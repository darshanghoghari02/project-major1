<% layout('./layouts/boilerplate') -%>

  <div class="container">

    <div id="filters">
      <a class="filter" href="/listing?category=tranding">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Tranding</p>
      </a>
      <a class="filter" href="/listing?category=rooms">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </a>
      <a class="filter" href="/listing?category=cities">
        <div><i class="fa-solid fa-city"></i></div>
        <p>Iconic cities</p>
      </a>
      <a class="filter" href="/listing?category=mountain">
        <div> <i class="fa-solid fa-mountain"></i></div>
        <p>Mountain</p>
      </a>
      <a class="filter" href="/listing?category=castle">
        <div> <i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castle</p>
      </a>
      <a class="filter" href="/listing?category=pools">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing Pools</p>
      </a>
      <a class="filter" href="/listing?category=camping">
        <div> <i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
      </a>
      <a class="filter" href="/listing?category=farms">
        <div> <i class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
      </a>
      <a class="filter" href="/listing?category=arctic">
        <div><i class="fa-solid fa-snowflake"></i></div>
        <p>Arctic</p>
      </a>

      <div class="text-switch">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked">
          <label class="form-check-label" for="flexSwitchCheckChecked">Checked switch checkbox input</label>
        </div>
      </div>
    </div>

    <div class="row mt-3" id="list-container">
      <% for(let list of allshow) { %>
        <div class="col-sm-6 col-md-6 col-lg-4 mb-4">
          <a class="text-decoration-none text-dark" href="/listing/<%= list._id %>">
            <div class="card h-100 shadow-sm">
              <img src="<%= list.image.url %>" class="card-img-top" alt="<%= list.title %>"
                style="height: 200px; object-fit: cover;">
              <div class="card-body">
                <h5 class="card-title">
                  <%= list.title %>
                </h5>
                <p class="card-text">&#8377; <%= list.price ? list.price.toLocaleString("en-IN") : "N/A" %> <em
                      class="gst">18% GST</em> </p>

              </div>
            </div>
          </a>
        </div>
        <% } %>
    </div>
  </div>

  <script>
    let textSwitch = document.querySelector('.text-switch input');
    textSwitch.addEventListener('change', function () {
      let gsts = document.querySelectorAll('.gst');
      for (gst of gsts) {
        if (gst.style.display != 'inline') {
          gst.style.display = 'inline';
        } else {
          gst.style.display = 'none';
        }
      }

    });
  </script>