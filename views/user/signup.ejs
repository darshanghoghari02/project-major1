<% layout("./layouts/boilerplate.ejs") -%>

    <div class="row offset-3">
        <h1>Signup</h1>
        <div class="col-6">
            <form method="post" action="/signup" class="needs-validation" novalidate>

                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" id="username" name="username" placeholder="Enter Username" class="form-control"
                        required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">email</label>
                    <input type="text" id="email" name="email" placeholder="Enter email" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="text" id="password" name="password" placeholder="Enter Password" class="form-control"
                        required>
                </div>
                <button class="btn btn-success">Signup</button>
            </form>
        </div>
    </div>